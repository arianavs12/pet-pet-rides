<form action="/register/pet" method="POST">
   <label> Nombre de tu Mascota
      <input type="text" name="petName">
   </label>
   <label> ¿Qué animal es?
      <input name="typeOfPet" list="kindOfPet">
      <datalist id="kindOfPet">
<option value="Dog">Perro</option>
<option value="Cat">Gato</option>

      </datalist>
   </label>
   <label> ¿De qué tamaño es?
   <input name="size" list="sizeOfPet">

<datalist id="sizeOfPet">
  <option value="Extra-Small">Pequeño</option>
  <option value="Small">Pequeño</option>
  <option value="Medium">Mediano</option>
  <option value="Large">Grande</option>
  <option value="Extra-Large">Extra Grande</option>
  
</datalist>
   </label>
   
   <button type="submit">Registra a tu amigo</button>
</form>

{{#if errorMessage}}
   {{errorMessage}}
{{/if}}