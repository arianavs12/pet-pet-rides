<!-- Page Header-->
        <header class="masthead1" style="background-image: url('../images/headers/create-bg.jpg')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="site-heading">
                            <h1>Registra una nueva travesía</h1>
                        </div>
                    </div>
                </div>
            </div>
        </header>

<div class="formRideCreate">
<form action="/ride/create" method="POST">
   <div>
   <h3> Origen
      <input type="text" name="origin">
   </h3>
   </div>
   <div>
   <h3> Destino
      <input type="text" name="destination">
   </h3>
   </div>
   <div>
   <h3> Fecha
      <input type="datetime-local" name="date">
   </h3>
   </div>
   <div> 

<h3> Selecciona tu vehículo
   <select name="car">
   {{#each cars}}
   <option value="{{_id}}">{{model}}</option>
   {{/each}}
   </select>
</h3>
</div>
<div> 
<h3> Precio por Persona
      <input type="number" name="price">
</h3>
</div>
<div> 
<h3>¿Qué mascota llevaras?
<select name="pet">
{{#each pets}}
<option value="{{_id}}">{{petName}}</option>
{{/each}}
</select>

</h3>
</div>
   <div style="justify-items: center;">
   <button type="submit">Publicar Viaje</button>
   </div>
</form>

<div><img src="/images/perro-viaje.png" alt=""></div>

</div>

{{#if errorMessage}}
   {{errorMessage}}
{{/if}}