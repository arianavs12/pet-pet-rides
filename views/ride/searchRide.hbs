<form action="/ride/search.hbs" method="POST">
   <label> Origin
      <input type="text" name="origin">
   </label>
   <label> Destination
      <input type="text" name="destination">
   </label>
   <label> Date
      <input type="date" name="date">
   </label>
   <label> Choose your pet
      <input list="listOfPet">
      <datalist id="listOfPet">
  <option value="Dog">Dog</option>
  <option value="Cat">Cat</option>
      </datalist>
  </label>
  <label> Number of places
      <input list="numOfplaces">
      <datalist id="numOfplaces">
  <option value="1">1</option>
  <option value="2">2</option>
      </datalist>
  </label>
{{!-- <form action="/"></form>
   <button type="submit">Look for a trip</button> --}}
</form>




{{#each rides}}
<div>
<h4>Origen: {{origin}}</h4>
<h4>Destino: {{destination}}</h4>
<h4>Fecha: {{date}}</h4>
<h4>Conductor: {{driver.name}}</h4>
<h4>Carro: {{car.model}}</h4>
<h4>Asientos Disponibles: {{car.seats}}</h4>
<button><a href="/ride/{{_id}}">Reservar Lugar</a></button>
<hr>
</div>
{{/each}}

{{#if errorMessage}}
   {{errorMessage}}
{{/if}}