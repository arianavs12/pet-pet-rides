<!-- Page Header-->
        <header class="masthead1" style="background-image: url('../images/headers/pets-bg.jpg')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="site-heading">
                            <h1>Tus Mascotas</h1>
                            
                        </div>
                    </div>
                </div>
            </div>
        </header>


<div class="matrizMascotas">
    <div class="botonMascota">
        <button class="btn btn-primary text-uppercase"><a href="/register/pet">Añadir Mascota</a></button>
    </div>
    <div class="child2MatrizMascotas">
        {{#each mascotasEncontradas}}
        <div class="contenedorMascota">
            <img class="icon-animal" src="../../public/images/icons/{{checarTipoAnimal typeOfPet}}.png" alt="{{checarTipoAnimal typeOfPet}}-icon">
            <h4>{{petName}}</h4>
            <h4>{{typeOfPet}}</h4>
            <h4>Tamaño: {{size}}</h4>
        </div>
        {{/each}}
    </div>    
</div>