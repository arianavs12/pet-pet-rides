<form action="/register/pet" method="POST">
   <label> Pet's Name
      <input type="text" name="petName">
   </label>
   <label> What's your Pet?
      <input name="typeOfPet" list="kindOfPet">
      <datalist id="kindOfPet">
<option value="Dog">Dog</option>
<option value="Cat">Cat</option>

      </datalist>
   </label>
   <label> Size of your pet?
   <input name="size" list="sizeOfPet">

<datalist id="sizeOfPet">
  <option value="Small">Small</option>
  <option value="Medium">Medium</option>
  <option value="Large">Large</option>
  
</datalist>
   </label>
   
   <button type="submit">Register your Friend</button>
</form>

{{#if errorMessage}}
   {{errorMessage}}
{{/if}}